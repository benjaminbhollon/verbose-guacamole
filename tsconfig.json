{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "noImplicitAny": false,
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "sourceMap": true,
    "declaration": false
  },
  "include": ["src/**/*"]
}
